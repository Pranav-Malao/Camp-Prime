<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center mb-3">Edit Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground._id %>?_method=put" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="form-floating mb-3">
                <input class="form-control" type="text" name="campground[title]" id="title" placeholder="title" value="<%= campground.title%>" required>
                <label class="form-label" for="title">Title</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id=" location" name="campground[location]" placeholder="location" value="<%= campground.location %>" required>
                <label class="form-label" for="location">Location</label>
            </div>

            <div class="form-floating mb-3">
                <input type="file" name="image" multiple>
                <label class="form-label" for="location">Add Images </label>
            </div>
            
            <div class="input-group mb-3">
                <span class="input-group-text" id="price-label">â‚¹</span>
                <input type="number" class="form-control" placeholder="Price" name="campground[price]" aria-label="price" aria-describedby="price-label" value="<%= campground.price %>" required>
            </div>
            
            <div class="form-floating mb-3">
                <textarea class="form-control mb-10" placeholder="Leave a comment here" id="description" name="campground[description]" required><%= campground.description %></textarea>
                <label for="description mb-10">Comments</label>
            </div>

            <button class="btn btn-primary mb-3">Edit campground</button>
        </form>
    </div>
</div>
